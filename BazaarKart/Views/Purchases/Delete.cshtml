<h3>Are you sure you want to delete this purchase?</h3>
<div>
    <h4>Purchase Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Purchase Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_prd)
        </dd>

        <dt>
            @Html.Label("Purchase Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_qty)
        </dd>

        <dt>
            @Html.Label("Purchased Date")
        </dt>

        <dd>
